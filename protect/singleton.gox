package protect

import "time"

// default global IP limiter (singleton)
var IPLimiter = NewRateLimiter(5, time.Second) // 5 req/sec per IP

// You can adjust IPLimiter.maxRequests/window at startup if you want.
func ConfigureIPLimiter(maxRequests int, window time.Duration) {
	IPLimiter = NewRateLimiter(maxRequests, window)
}
